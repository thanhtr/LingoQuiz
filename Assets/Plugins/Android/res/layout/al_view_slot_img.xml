<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/view_img"
        android:layout_width="@dimen/al_slot_machine_icon_size"
        android:layout_height="@dimen/al_slot_machine_icon_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/al_slot_machine_icon_spacing"
        android:layout_marginTop="@dimen/al_slot_machine_icon_spacing" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#AAA" />

</LinearLayout>